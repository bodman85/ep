<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
 
http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"

	version="2.0">

	<managed-bean>
		<managed-bean-name>userMBean</managed-bean-name>
		<managed-bean-class>com.otv.UserManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>productMBean</managed-bean-name>
		<managed-bean-class>com.otv.ProductManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<application>
		<resource-bundle>
			<base-name>config</base-name>
			<var>cfg</var>
		</resource-bundle>
	</application>
